#:kivy 1.4

BoxLayout:
    orientation: 'vertical'

    RstDocument:
        text: "Prints\n---------------\nThe Kivy."

    BoxLayout:
        orientation: 'horizontal'

        Label:
            text: 'Copies'

        Button:
            text: '+'
            on_press: root.on_add_print()

        Button:
            text: '-'
            on_press: root.on_remove_print()

